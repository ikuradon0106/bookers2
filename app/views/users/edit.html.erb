<h1>User info</h1>

<%= form_with(model: @user, local: true) do |f| %>

  <div class="user-name">Name</div>
  <%= f.text_field :name, class: "form-control" %>

  <div class="user-edit-image">Image</div>
  <%= f.file_field :profile_image, class: "form-control" %>

  <div class="form-body">Introduction</div>
  <%= f.text_area :introduction, class: "form-control" %><br>

  <div class="upload">
    <%= f.submit "Update User", class: "btn btn-primary" %>
  </div>
<% end %>
