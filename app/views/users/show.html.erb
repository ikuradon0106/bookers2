<div class='container px-5 px-sm-0'>
	<div class='row'>
	 <%= render 'books/sidebar', user: @user, book: @book %>
	  
			<div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th></th>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody>
					<% @books.each do |book| %>
						 <tr>
          <td></td>
          <td><%= book.title %></td>
          <td><%= book.opinion %></td>
          <td><%= link_to 'Show', book_path(book), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
					</tr>
			  	<% end %>
				</tbody>
	    </table>
	  </div>
	</div>
</div>