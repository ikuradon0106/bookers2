<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
				  <%= image_tag @user.image.attached? ? @user.image : 'default-image.jpg', size: "100x100" %>
	      </tr>
	      <tr>
	        <th>name</th>
	        <td><%= @user.name %></td>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <td><%= @user.introduction %></td>
	      </tr>
	    </table>

	    <div class='row'>
				<%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
  			<i class="fa-solid fa-user-gear"></i>
				<% end %>
	    </div>


			<h2 class="mt-3">New book</h2>
	    <%= form_with(model: @book, local: true) do |f| %>
			
			<div class="mb-3">
    	<label for="book_title" class="form-label">Title</label>
    	<%= f.text_area :title, class: 'form-control', id: 'book_title' %>
    	</div>

			<div class="mb-3">
    	<label for="book_opinion" class="form-label">Opinion</label>
    	<%= f.text_area :opinion, class: 'form-control', id: 'book_opinion' %>
  		</div>

			<%= f.submit 'Create Book', class: 'btn btn-success' %>
			<% end %>
			</div>

			<div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th></th>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody>
					<% @books.each do |book| %>
						 <tr>
          <td></td>
          <td><%= book.title %></td>
          <td><%= book.opinion %></td>
          <td><%= link_to 'Show', book_path(book), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
					</tr>
			  	<% end %>
				</tbody>
	    </table>
	  </div>
	</div>
</div>