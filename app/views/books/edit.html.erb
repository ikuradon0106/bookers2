<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    
    <% if @book.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <h2>Editing Book</h2>

      <%= form_with(model: @book, local: true) do |f| %>
        <div class="form-group">
          <label for="book-title">Title</label>
          <%= f.text_field :title, class: "form-control", id: "book-title" %>
        </div>

        <div class="form-group">
          <label for="book-body">Opinion</label>
          <%= f.text_field :body, class: "form-control", id: "book-body" %>
        </div>

        <div class="upload">
          <%= f.submit "Update Book", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= link_to 'Show', book_path(@book) %>
        |
        <%= link_to 'Back', books_path %>
      </div>
    </div>
  </div>
</div>
